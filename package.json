{
  "name": "dora",
  "displayName": "Dora.js 扩展开发",
  "description": "支持 Dora.js 的扩展开发",
  "version": "0.6.0",
  "author": "Lin Zhang <linroid@gmail.com>",
  "license": "MIT",
  "publisher": "linroid",
  "engines": {
    "vscode": "^1.30.0"
  },
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/DoraKit/vscode-extension"
  },
  "homepage": "https://github.com/DoraKit/vscode-extension",
  "keywords": [
    "Dora.js",
    "vscode-extension"
  ],
  "categories": [
    "Other"
  ],
  "preview": true,
  "activationEvents": [
    "onDebug",
    "onLanguage:javascript",
    "onLanguage:json",
    "onCommand:dorajs.setHost",
    "onCommand:dorajs.push",
    "onCommand:dorajs.pull",
    "onCommand:dorajs.download",
    "onCommand:dorajs.refreshExplorer",
    "onView:dorajs.addonExplorer"
  ],
  "keybindings": [
    {
      "command": "dorajs.push",
      "key": "ctrl+shift+r",
      "mac": "cmd+shift+r",
      "when": "editorTextFocus"
    }
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dorajs.push",
        "title": "Dora.js: 推送到手机",
        "category": "Dora.js",
        "icon": {
          "light": "resources/light/push.svg",
          "dark": "resources/dark/push.svg"
        }
      },
      {
        "command": "dorajs.pull",
        "title": "从手机同步文件到当前目录",
        "category": "Dora.js",
        "icon": {
          "light": "resources/light/pull.svg",
          "dark": "resources/dark/pull.svg"
        }
      },
      {
        "command": "dorajs.download",
        "category": "Dora.js",
        "title": "从手机下载扩展工程"
      },
      {
        "command": "dorajs.setHost",
        "category": "Dora.js",
        "title": "设置手机 IP",
        "icon": {
          "light": "resources/light/phone.svg",
          "dark": "resources/dark/phone.svg"
        }
      },
      {
        "command": "dorajs.refreshExplorer",
        "category": "Dora.js",
        "title": "刷新",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dora",
          "title": "Dora.js",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "dora": [
        {
          "id": "dorajs.addonExplorer",
          "name": "Dora.js"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "dorajs.push",
          "group": "navigation"
        }
      ],
      "explorer/context": [],
      "view/title": [
        {
          "command": "dorajs.refreshExplorer",
          "when": "view == dorajs.addonExplorer",
          "group": "navigation@1"
        },
        {
          "command": "dorajs.setHost",
          "when": "view == dorajs.addonExplorer",
          "group": "navigation@2"
        },
        {
          "command": "dorajs.pull",
          "when": "view == dorajs.addonExplorer",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Dora.js 配置项",
      "properties": {
        "dorajs.host": {
          "type": "string",
          "description": "手机 IP 地址"
        },
        "dorajs.autoPush": {
          "type": "boolean",
          "default": false,
          "description": "是否在文件变更时自动推送到手机"
        }
      }
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/jsComponent.code-snippets"
      },
      {
        "language": "typescript",
        "path": "./snippets/tsComponent.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "@types/adm-zip": "^0.4.32",
    "adm-zip": "^0.4.13",
    "archiver": "^3.1.1",
    "fs-extra": "^8.1.0",
    "global": "^4.4.0",
    "read-package-json": "^2.1.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "tmp": "^0.1.0",
    "unique-filename": "^1.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@types/request-promise": "^4.1.44",
    "@types/targz": "^1.0.0",
    "@types/tmp": "^0.1.0",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  }
}